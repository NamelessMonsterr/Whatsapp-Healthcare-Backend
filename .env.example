# =============================================================================
# HEALTHCARE WHATSAPP BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

ENVIRONMENT=development          # development, staging, production
DEBUG=True                       # Set to False in production
LOG_LEVEL=INFO                   # DEBUG, INFO, WARNING, ERROR, CRITICAL
HOST=0.0.0.0                     # Bind address
PORT=5000                        # Port number
SECRET_KEY=your-super-secret-key-at-least-32-characters-long
ADMIN_API_KEY=your-admin-api-key-for-secure-admin-access

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION (REQUIRED)
# =============================================================================

# Get these from Facebook Developer Console -> WhatsApp -> API Setup
WHATSAPP_TOKEN=your-whatsapp-access-token-from-facebook-developer-console
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
VERIFY_TOKEN=your-webhook-verification-token-make-it-secure

# =============================================================================
# TWILIO CONFIGURATION (Optional - for SMS alerts)
# =============================================================================

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_SMS_NUMBER=your-twilio-phone-number

# =============================================================================
# DATABASE CONFIGURATION (Choose one)
# =============================================================================

# For SQLite (development)
DATABASE_URL=sqlite:///./data/healthcare.db

# For PostgreSQL (production - recommended)
# DATABASE_URL=postgresql://healthcare_user:your-password@localhost:5432/healthcare_bot

# For MySQL (alternative)
# DATABASE_URL=mysql+pymysql://healthcare_user:your-password@localhost:3306/healthcare_bot

DATABASE_ECHO=False

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

HUGGINGFACE_TOKEN=your-huggingface-token
USE_GPU=False
MODEL_DEVICE=cpu
MODEL_CACHE_DIR=./data/models
MAX_LENGTH=512
BATCH_SIZE=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

ENCRYPTION_KEY=your-32-byte-hex-encryption-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# =============================================================================
# RATE LIMITING CONFIGURATION
# ==============================================================================

RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# ADMINISTRATION CONFIGURATION
# =============================================================================

ADMIN_PHONE_NUMBERS=911234567890,919876543210
ADMIN_EMAILS=admin@healthcare.com,emergency@healthcare.com

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

DATA_GOV_API_KEY=579b464db66ec23bdd00000194bfbd293c9a4ada4ea609e6695b36e0
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENAI_API_KEY=your-openai-api-key
TRANSLATION_API_KEY=your-translation-api-key

# =============================================================================
# MONITORING AND HEALTH CHECKS
# ==============================================================================

HEALTH_CHECK_INTERVAL=30
MAX_RESPONSE_TIME=30
ENABLE_METRICS=True
METRICS_PORT=9090

# =============================================================================
# MESSAGE AND TEMPLATE CONFIGURATION
# =============================================================================

MAX_MESSAGE_LENGTH=4096
MAX_BUTTONS=3
SESSION_TIMEOUT_MINUTES=30
CONVERSATION_HISTORY_LIMIT=50

# =============================================================================
# EMERGENCY AND ALERT CONFIGURATION
# =============================================================================

EMERGENCY_CONTACT_NUMBER=108
HOSPITAL_HELPLINE=1066
GOVERNMENT_HEALTH_HELPLINE=1075
EMERGENCY_DETECTION_THRESHOLD=0.9

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

MAX_CONCURRENT_REQUESTS=100
MAX_MESSAGE_QUEUE_SIZE=1000
MAX_PROCESSING_TIME_MS=30000
WORKER_TIMEOUT=30

# =============================================================================
# NGROK CONFIGURATION (FOR LOCAL DEVELOPMENT)
# ==============================================================================

NGROK_AUTH_TOKEN=your-ngrok-auth-token
NGROK_URL=your-ngrok-url

# =============================================================================
# BACKUP AND DATA RETENTION
# =============================================================================

BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
MESSAGE_RETENTION_DAYS=365
CONVERSATION_RETENTION_DAYS=730
USER_DATA_RETENTION_DAYS=1095

# =============================================================================
# COMPLIANCE AND PRIVACY
# ==============================================================================

GDPR_COMPLIANCE_ENABLED=True
DATA_ANONYMIZATION_ENABLED=True
CONSENT_REQUIRED=True

# =============================================================================
# FEATURE FLAGS
# ==============================================================================

ENABLE_ADMIN_ALERTS=True
ENABLE_DATA_GOV_INTEGRATION=True
ENABLE_TWILIO_INTEGRATION=False
ENABLE_GOOGLE_MAPS_INTEGRATION=False
ENABLE_OPENAI_INTEGRATION=False
ENABLE_MULTILINGUAL_SUPPORT=True
ENABLE_PERSONALIZED_RESPONSES=True
ENABLE_CONTEXTUAL_CONVERSATIONS=True

# =============================================================================
# MODEL CONFIDENCE THRESHOLDS
# ==============================================================================

SYMPTOM_DETECTION_THRESHOLD=0.7
EMERGENCY_DETECTION_THRESHOLD=0.9
LANGUAGE_DETECTION_THRESHOLD=0.8
INTENT_CLASSIFICATION_THRESHOLD=0.75

# =============================================================================
# DATABASE CONNECTION POOLING
# ==============================================================================

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# SSL/TLS CONFIGURATION
# ==============================================================================

# For production with SSL
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# =============================================================================
# TESTING CONFIGURATION
# ==============================================================================

TEST_MODE=False
MOCK_EXTERNAL_APIS=False
TEST_PHONE_NUMBERS=919999999999,918888888888

# =============================================================================
# DEPLOYMENT SPECIFIC
# ==============================================================================

DEPLOYMENT_REGION=us-east-1
