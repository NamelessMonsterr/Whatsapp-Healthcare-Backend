# Healthcare WhatsApp Bot Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=5000
SECRET_KEY=your-super-secret-key-at-least-32-characters-long
ADMIN_API_KEY=your-admin-api-key-for-secure-admin-access

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION (REQUIRED)
# =============================================================================

# Get these from Facebook Developer Console -> WhatsApp -> API Setup
WHATSAPP_TOKEN=your-whatsapp-access-token-from-facebook-developer-console
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
VERIFY_TOKEN=your-webhook-verification-token-make-it-secure

# =============================================================================
# TWILIO CONFIGURATION (Optional - for SMS alerts)
# =============================================================================

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_SMS_NUMBER=your-twilio-phone-number

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./data/healthcare.db
# OR for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/healthcare_bot
# For SQLite (development)
DATABASE_URL=sqlite:///./data/healthcare.db

# For MySQL (alternative)
# DATABASE_URL=mysql+pymysql://healthcare_user:your-password@mysql:3306/healthcare_bot

DATABASE_ECHO=False

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# Hugging Face token (optional - for private models)
HUGGINGFACE_TOKEN=your-huggingface-token

# Model settings
USE_GPU=False
MODEL_DEVICE=cpu
MODEL_CACHE_DIR=./data/models
MAX_LENGTH=512
BATCH_SIZE=1

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Data.gov.in API key (get from data.gov.in)
DATA_GOV_API_KEY=579b464db66ec23bdd00000194bfbd293c9a4ada4ea609e6695b36e0

# Google Maps API key (optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenAI API key (optional)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# ADMINISTRATION CONFIGURATION
# =============================================================================

# Comma-separated list of admin phone numbers
ADMIN_PHONE_NUMBERS=911234567890,919876543210

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check settings
HEALTH_CHECK_INTERVAL=30
MAX_RESPONSE_TIME=30

# =============================================================================
# MESSAGE TEMPLATES
# =============================================================================

# WhatsApp template namespace
WHATSAPP_TEMPLATE_NAMESPACE=your-template-namespace

# =============================================================================
# EMERGENCY CONTACTS
# =============================================================================

EMERGENCY_CONTACT_NUMBER=108
HOSPITAL_HELPLINE=1066
GOVERNMENT_HEALTH_HELPLINE=1075

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Model confidence thresholds
SYMPTOM_DETECTION_THRESHOLD=0.7
EMERGENCY_DETECTION_THRESHOLD=0.9
LANGUAGE_DETECTION_THRESHOLD=0.8
INTENT_CLASSIFICATION_THRESHOLD=0.75

# Processing limits
MAX_CONCURRENT_REQUESTS=100
MAX_MESSAGE_QUEUE_SIZE=1000
MAX_PROCESSING_TIME_MS=30000
